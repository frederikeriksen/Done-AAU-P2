<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize= "20sp"
        android:text="Notes"
        android:gravity="center_horizontal"/>

    <Button android:id="@+id/add_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            style="?android:attr/buttonStyleSmall"
            android:drawableRight="@drawable/ic_add"
            android:drawableEnd="@drawable/ic_add"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="3dp"/>

    <TextView
        android:id="@+id/notes_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:textColor="@color/mainBlueColor"
        android:layout_alignBottom="@id/add_note"
        android:text="NOTES:"/>

    <TextView
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_alignTop="@id/notes_text_view"/>

    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/notes"
        android:layout_marginTop="3dp"
        android:layout_height="1dp"
        android:background="@color/mainBlueColor"/>

</RelativeLayout>
